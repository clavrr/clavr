# Email Configuration
EMAIL_ADDRESS=your.email@example.com
EMAIL_PASSWORD=your_email_password
AGENT_EMAIL=your.email@example.com
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Security Configuration
# Generate key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here
SECRET_KEY=your_secret_key_for_csrf_here
CSRF_TOKEN_EXPIRES=3600

# OAuth Security Configuration
TOKEN_ROTATION_INTERVAL_HOURS=24  # Rotate session tokens every 24 hours
AUDIT_LOG_RETENTION_DAYS=90  # Keep audit logs for 90 days
TOKEN_REFRESH_MAX_RETRIES=3  # Max retry attempts for token refresh
TOKEN_REFRESH_BACKOFF_FACTOR=2.0  # Exponential backoff factor (2^attempt seconds)

# AI Configuration
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL=gemini-2.5-flash-exp
AI_TEMPERATURE=0.7
MAX_TOKENS=1000

# ElevenLabs Voice Configuration (Optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB
ELEVENLABS_MODEL=eleven_monolingual_v1
ELEVENLABS_STT_MODEL=scribe_v1
ELEVENLABS_STT_LANGUAGE=en
ELEVENLABS_ENABLE_PUNCTUATION=true
ELEVENLABS_ENABLE_SPEAKER_DETECTION=true
ELEVENLABS_MAX_SPEAKERS=32

# Agent Configuration
AGENT_NAME=Email AI Assistant
AGENT_EMAIL=assistant@example.com
CHECK_INTERVAL=300
AUTO_REPLY=false
DRY_RUN=true

# Database (PostgreSQL required for vector fallback)
DATABASE_URL=postgresql://user:password@localhost:5432/notely_agent
# PostgreSQL with pgvector extension required for vector store fallback

# Vector Store Configuration
# Primary: Qdrant (cloud-native, performant)
# Fallback: PostgreSQL (requires pgvector extension)
VECTOR_STORE_BACKEND=auto  # auto, qdrant, or postgres

# Qdrant Configuration (PRIMARY - Cloud/Local Vector Database)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# ArangoDB Configuration (PRIMARY - Graph Database)
# Required for knowledge graph and hybrid GraphRAG functionality
ARANGODB_URL=http://localhost:8529
ARANGODB_USERNAME=root
ARANGODB_PASSWORD=password
ARANGODB_DATABASE=clavr

# Knowledge Graph Configuration
GRAPH_BACKEND=arangodb  # "arangodb" (production) or "networkx" (testing/fallback)
ENABLE_KNOWLEDGE_GRAPH=true  # Enable hybrid GraphRAG (Qdrant + ArangoDB)
GRAPH_VALIDATION_MODE=strict  # "strict" (raise errors) or "warn" (log only)

# Server Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
HOST=0.0.0.0
PORT=8000
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration (Redis)
CACHE_ENABLED=true  # Enable/disable caching
REDIS_URL=redis://localhost:6379/0  # Redis connection URL
CACHE_DEFAULT_TTL=300  # Default cache TTL in seconds (5 minutes)
CACHE_EMAIL_LIST_TTL=60  # Email list cache TTL (1 minute)
CACHE_EMAIL_SEARCH_TTL=300  # Email search cache TTL (5 minutes)
CACHE_CALENDAR_LIST_TTL=300  # Calendar list cache TTL (5 minutes)
CACHE_USER_PROFILE_TTL=600  # User profile cache TTL (10 minutes)
CACHE_LLM_RESPONSE_TTL=3600  # LLM response cache TTL (1 hour)
CACHE_MAX_MEMORY_SIZE=1000  # Max items in in-memory fallback cache

# Celery Configuration (Job Queue)
CELERY_BROKER_URL=redis://localhost:6379/0  # Celery message broker (defaults to REDIS_URL)
CELERY_RESULT_BACKEND=redis://localhost:6379/0  # Celery result backend (defaults to REDIS_URL)
CELERY_TASK_ALWAYS_EAGER=false  # Execute tasks synchronously for testing
CELERY_TASK_EAGER_PROPAGATES=true  # Propagate exceptions in eager mode
FLOWER_PORT=5555  # Flower monitoring UI port
FLOWER_BASIC_AUTH=admin:password  # Flower basic auth credentials

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# Security
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
